# ===== VARIABLES DE BASE DE DADES =====
DB_NAME=malet_torrent
DB_USER=malet_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# ===== VARIABLES REDIS =====
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
# REDIS_URL=redis://user:password@host:port/database (opcional, sobreescriu altres opcions)

# ===== CONFIGURACIÓ WORDPRESS INSTALACIÓ =====
WORDPRESS_URL=https://your-domain.com
WORDPRESS_TITLE=Malet Torrent - Pastisseria Artesana
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=your_admin_password_here
WORDPRESS_ADMIN_EMAIL=admin@your-domain.com

# ===== CONFIGURACIÓ TEMA =====
WORDPRESS_THEME_NAME=malet-torrent

# ===== ENVIRONMENT TYPE =====
# Valors vàlids: local, development, staging, production
WP_ENVIRONMENT_TYPE=local

# ===== CLAUS DE SEGURETAT WORDPRESS =====
# Genera claus úniques a: https://api.wordpress.org/secret-key/1.1/salt/
WORDPRESS_AUTH_KEY=your_auth_key_here
WORDPRESS_SECURE_AUTH_KEY=your_secure_auth_key_here
WORDPRESS_LOGGED_IN_KEY=your_logged_in_key_here
WORDPRESS_NONCE_KEY=your_nonce_key_here
WORDPRESS_AUTH_SALT=your_auth_salt_here
WORDPRESS_SECURE_AUTH_SALT=your_secure_auth_salt_here
WORDPRESS_LOGGED_IN_SALT=your_logged_in_salt_here
WORDPRESS_NONCE_SALT=your_nonce_salt_here

# ===== VARIABLES WORDPRESS GENERAL =====
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=false
WORDPRESS_PORT=8080

# ===== SERVEIS DESENVOLUPAMENT =====
PHPMYADMIN_PORT=8081
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025

# ===== VARIABLES BACKUP =====
BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Server Ports
HTTP_PORT=80
HTTPS_PORT=443

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Email Configuration (for production)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME="Malet Torrent"

# SSL Configuration (for production)
SSL_EMAIL=admin@your-domain.com
SSL_DOMAIN=your-domain.com

# Performance Settings
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M

# Security Settings
WP_FORCE_SSL_ADMIN=true
WP_AUTO_UPDATE_CORE=minor
WP_DISALLOW_FILE_EDIT=true
WP_DISALLOW_FILE_MODS=false

# ==========================================
# Security Notes for GitHub Integration
